# Kafka Configuration
# Comma-separated broker list
KAFKA_BROKERS=localhost:9094
# Kafka consumer group id
KAFKA_GROUP_ID=event-processor-group
# Topic to consume
KAFKA_TOPIC=test-topic
# Where to start reading: latest | earliest (mapped via KAFKA_OLDEST below)
KAFKA_OFFSET_RESET=latest
# Kafka cluster version (for clients that use it)
KAFKA_VERSION=2.8.0
# If true, start from oldest available offset; if false, start from latest
KAFKA_OLDEST=false

# Application Configuration
# log level: debug | info | warn | error
LOG_LEVEL=info

# API Configuration
# Base URL of the downstream API (used by handler)
API_BASE_URL=http://localhost:5500
# Health path to ping (2xx means healthy)
API_HEALTH_PATH=/
# Pinger interval in seconds
PING_INTERVAL_SECONDS=10

# Retry backoff configuration (milliseconds)
# Base backoff for retries
RETRY_BACKOFF_BASE_MS=1000
# Maximum backoff allowed
RETRY_BACKOFF_MAX_MS=60000
